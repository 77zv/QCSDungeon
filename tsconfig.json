{
  "compilerOptions": {
    "target": "esnext",
    "module": "esNext",
    "moduleResolution": "node",
    "lib": [
      "es6",
      "dom"
    ],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}